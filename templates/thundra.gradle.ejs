initscript {
    repositories {
        mavenCentral()
    }

    dependencies {
        classpath 'io.thundra.agent:thundra-gradle-test-plugin:0.0.5'
    }
}

allprojects {
    apply plugin: io.thundra.agent.gradle.ThundraTestPlugin

    repositories {
        mavenCentral()
    }

    thundra {
        agentPath = "<%= thundra.agentPath %>"
    }
}
